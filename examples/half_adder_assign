digraph half_adder_assign {
	graph [rankdir=LR]
	a [color=blue shape=triangle]
	b [color=blue shape=triangle]
	sum [color=red shape=triangle]
	carry [color=red shape=triangle]
	"^_0" [label="^" shape=box]
	a -> "^_0"
	b -> "^_0"
	"^_0" -> sum
	"&_1" [label="&" shape=box]
	a -> "&_1"
	b -> "&_1"
	"&_1" -> carry
}
